entity Department {
	departmentName String
}

entity JobHistory {
	startDate ZonedDateTime,
	endDate ZonedDateTime
}

entity Job {
	jobTitle String,
	minSalary Long,
	maxSalary Long,
}


entity Employee {
	firstName String,
	lastName String,
	email String,
	phoneNumber String,
	hireDate ZonedDateTime,
	salary Long,
	commissionPct Long
}

entity Location {
	streetAddress String,
	postalCode String,
	city String,
	stateProvince String
}

entity Task {
	title String,
	description String
}

entity Country {
	countryName String
}


relationship OneToMany {
	Department{employee} to Employee{department}
}

relationship OneToMany {
	Location{country} to Country{location}
}

relationship OneToOne {
	JobHistory{department} to Department{jobHistory}
}

relationship OneToOne {
	Employee{manager} to Employee{employee}
}

relationship OneToOne {
	Employee{job} to Job{Employee}
}

relationship ManyToMany {
	Job{tasks} to Task{jobs} 
}

relationship OneToOne {
	Department{location} to Location{department}
}